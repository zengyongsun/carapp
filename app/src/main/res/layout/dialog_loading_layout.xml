<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/qb_px_537"
    android:layout_height="@dimen/qb_px_300">

    <ImageView
        android:id="@+id/ivLoading"
        android:layout_width="@dimen/qb_px_96"
        android:layout_height="@dimen/qb_px_96"
        android:src="@mipmap/icon_loading"
        app:layout_constraintBottom_toBottomOf="@+id/tvDesc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_loading"
        android:textColor="@color/loading_text_color"
        android:textSize="@dimen/qb_px_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLoading" />

</android.support.constraint.ConstraintLayout>