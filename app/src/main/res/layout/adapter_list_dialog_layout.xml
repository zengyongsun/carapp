<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/qb_px_340"
        android:layout_height="@dimen/qb_px_54"
        android:background="@drawable/select_login_item"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_44"
            android:gravity="center"
            android:text="007"
            android:textColor="@color/login_item_color"
            android:textSize="@dimen/text_size_one" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_32"
            android:gravity="center"
            android:text="超级英雄"
            android:textColor="@color/login_item_color"
            android:textSize="@dimen/text_size_one" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_17" />
</LinearLayout>